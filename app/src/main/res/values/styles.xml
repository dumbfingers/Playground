<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/eclipseTranslucent</item>
        <item name="colorPrimaryDark">@color/eclipse</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkToolbar">
        <item name="android:background">@color/eclipseTranslucent</item>
    </style>

    <style name="ExpandedTitle">
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>

</resources>
